<div class="col-xs-3">

	<h2>User info</h2>

	<table class='table'>
	  <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, class: "pull-left profile-thumb", fallback: "no_image.jpg", alt: "Profile image" %></tr> 
	  <tr>
		<th>name</th>
		<th><%= user.name %></th>
	  </tr>
	  <tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	  </tr>
	</table>

	<div class="row">
	  <%= link_to '', edit_user_path(current_user.id), class: "edit_user_#{user.id} col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
	</div>

	<h2>New Book</h2>
	  
	<%= form_for(book, url: books_path) do |f| %>

	  <div class="field row">
	    <label>Title</label>
	     <%= f.text_field :book_title, class: "book_title col-xs-12" %>
	  </div>

	  <div class="field row">
	    <label>Opinion</label>
	    <%= f.text_area :book_body, class: "book_body form-control col-xs-12" %>
	  </div>

	  <div class="row">
	    <%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary book_create" %>
	  </div>
    <% end %>

</div>
