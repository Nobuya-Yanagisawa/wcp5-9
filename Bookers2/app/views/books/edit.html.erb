<div class="container">
  <div class="row">
  	<div class="top-message col-md-offset-3 col-md-6">
  	  <h1>Editing Book</h1>

  	  <%= form_for(@book) do |f| %>
	  <div class="field row">
	    <label>Title</label>
	     <%= f.text_field :book_title, class: "col-xs-12 book_title" %>
	  </div>

	  <div class="field row">
	    <label>Opinion</label>
	    <%= f.text_area :book_body, class: "form-control col-xs-12 book_body" %>
	  </div>

	  <div class="row">
	    <%= f.submit 'Update Book', class: "col-xs-12 btn btn-primary book_update", style: "margin-bottom: 10px;" %>
	  </div>
      <% end %>

      <%= link_to 'Show', book_path(@book), class: "book_#{@book.id}" %>
      |
      <%= link_to 'Back', books_path, class: "back" %>

    </div>
  </div>
</div>