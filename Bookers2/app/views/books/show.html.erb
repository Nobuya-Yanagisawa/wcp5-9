<div class="container">

  <div class="row">
  <%= render 'books/user_info', book: @book2, user: @user %>
  	<div class="col-xs-9">
  	  <h2>Book detail</h2>
  	  <table class="table">
        <thead>
  	    <tr>
  	      <td></td>
  	      <td>Title</td>
  	      <td>Opinion</td>
  	    </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image2.jpg", alt: "Profile image", style: "display: block;", class: "user_#{@user.id}" %>
              <% end %>
              <%= link_to @user.name, user_path(@user), class: "user_#{@user.id}" %>
            </td>
            <td><%= @book.book_title %></td>
            <td><%= @book.book_body %></td>
            <td>
              <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book), class: "edit_book_#{@book.id} btn-sm btn-success" %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book), method: :delete, class: "destroy_book_#{@book.id} btn-sm btn-danger", "data-confirm" => "本当に消しますか?" %>
              <% end %>
            </td>
          </tr>
        </tbody>
  	  </table>

  	</div>
  </div>
</div>